<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/anihub_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/code_geass" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8000000" />

    <LinearLayout
        android:id="@+id/empty_results_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/empty_results_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/anime_list_empty_results" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/anime_detail_see_more_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />


    <ProgressBar
        android:id="@+id/initial_loading_pb"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        tools:visibility="visible" />

</FrameLayout>